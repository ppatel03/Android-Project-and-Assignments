<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="3"
    android:orientation="horizontal"
    android:background="@drawable/bgwooden">

    <ImageView
        android:src="@drawable/fb"  android:layout_width="160dp"
        android:layout_height="60dp" android:layout_margin="5dp" android:scaleType="fitXY"
        />

    <ImageView
        android:src="@drawable/google"  android:layout_width="160dp"
        android:layout_height="60dp" android:layout_margin="5dp" android:scaleType="fitXY"
        />

    <ImageView
        android:src="@drawable/firefox"  android:layout_width="160dp"
        android:layout_height="60dp" android:layout_margin="5dp" android:scaleType="fitXY"
        />

    <ImageView
        android:src="@drawable/youtube"  android:layout_width="160dp"
        android:layout_height="120dp" android:layout_margin="5dp"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:scaleType="fitXY"


        />

    <ImageView
        android:src="@drawable/rss"  android:layout_width="320dp"
        android:layout_height="120dp" android:layout_margin="5dp"
        android:layout_rowSpan="2"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:scaleType="fitXY"

        />

    <LinearLayout

        android:layout_rowSpan="2"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:scaleType="fitXY"
        >

        <ImageView
            android:src="@drawable/twitter_t"  android:layout_width="245dp"
            android:layout_height="120dp" android:layout_margin="5dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            />

        <ImageView
            android:src="@drawable/ie"  android:layout_width="245dp"
            android:layout_height="120dp" android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:layout_gravity="fill"
            />

    </LinearLayout>





</GridLayout>