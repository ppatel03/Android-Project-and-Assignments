<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.findmybusapplication.activities.RecyclerViewActivityForBusSearchResults$PlaceholderFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/earth_blue"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/saveSearchOptionImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save this Search"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/saveSearchOptionImage"
        android:layout_alignTop="@+id/saveSearchOptionImage"
        android:layout_alignRight="@+id/saveSearchOptionImage"
        android:layout_alignBottom="@+id/saveSearchOptionImage"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saveSearchOptionImage"
        />

</RelativeLayout>
