<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/busDetailView"
    android:background="@color/blue_grey"
    android:layout_margin="5dp"
   >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/switch_thumb_normal_material_light"
        android:text="Bus Title"
        android:id="@+id/busDetailTitle"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bus Detail Description"
        android:id="@+id/busDetailDescription"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/switch_thumb_normal_material_light"

        />



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/busDetailImage"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total Stops"
        android:layout_gravity="center"
        android:id="@+id/busDetailTotalStops"
        android:layout_margin="2dp"
        android:textColor="@color/switch_thumb_normal_material_light"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Next Available Timings"
        android:id="@+id/busDetailNextAvailableTimings"
        android:layout_margin="2dp"
        android:textColor="@color/switch_thumb_normal_material_light"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your Trip Cost"
        android:id="@+id/busDetailTripCost"
        android:layout_margin="2dp"
        android:textColor="@color/switch_thumb_normal_material_light"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="do Not Operate"
        android:id="@+id/busDetailDoNotOperate"
        android:layout_margin="2dp"
        android:textColor="@color/switch_thumb_normal_material_light"
        />


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busDetailRatings"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="2.0"
        style="?android:attr/ratingBarStyleIndicator"

        />


</LinearLayout>
