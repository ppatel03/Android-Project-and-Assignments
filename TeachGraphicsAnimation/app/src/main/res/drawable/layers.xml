<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />
            <gradient
                android:angle="90"
                android:centerColor="#303339"
                android:centerY="0.05"
                android:endColor="#000000"
                android:startColor="#00000000" />
        </shape>
    </item>
    <item>
        <inset android:drawable="@drawable/shrek2"
            android:insetBottom="50dp"/>
    </item>

    <item>
        <bitmap android:src="@drawable/blue_dot"
            android:gravity="center" />
    </item>
    <item android:bottom="100dp" android:left="100dp">
        <bitmap android:src="@drawable/green_dot"
            android:gravity="center" />
    </item>
    <item android:bottom="0dp" android:left="300dp">
        <bitmap android:src="@drawable/red_dot"
            android:gravity="center" />
    </item>
</layer-list>